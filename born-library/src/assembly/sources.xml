<assembly
	xmlns="https://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="https://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 https://maven.apache.org/xsd/assembly-1.1.2.xsd">


	<!-- @author Julian Mendez -->

	<id>sources</id>

	<baseDirectory>.</baseDirectory>

	<fileSets>

		<fileSet>
			<directory>${basedir}/../born-owlapi/src/main/java/</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>**</include>
			</includes>
		</fileSet>

		<fileSet>
			<directory>${basedir}/../born-owlapi/src/main/resources/</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>**</include>
			</includes>
		</fileSet>

		<fileSet>
			<directory>${basedir}/../born-gui/src/main/java/</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>**</include>
			</includes>
		</fileSet>

		<fileSet>
			<directory>${basedir}/../born-gui/src/main/resources/</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>**</include>
			</includes>
		</fileSet>

	</fileSets>

</assembly>

